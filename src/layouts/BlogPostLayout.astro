---
import PostHeader, { PostHeaderProps } from "../components/PostHeader.astro";
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
const { title, description, date, category, author, image } =
  frontmatter as PostHeaderProps;
---

<Layout tytle={title} description={description}>
  <PostHeader
    title={title}
    descripiption={description}
    date={date}
    category={category}
    image={image}
    author={author}
  />
  <div class="post-content">
    <div class="content">
      <slot />
    </div>
    <div class="sidebar"></div>
  </div>
</Layout>
