---
import Link from "../components/Link.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout tytle={"Page not found"}>
  <div
    class="container"
    style={{
      display: "grid",
      placeItems: "center",
      textAlign: "center",
      gap: "var(--space-sm)",
    }}
  >
    <div>
      <h1 class="h1">Sorry</h1>
      <p>We seem to have misplaced something...</p>
    </div>
    <Link
      href="/"
      style="secondary"
      text="Go home"
      icon={{
        name: "tabler:home",
        side: "right",
      }}
    />
  </div>
</Layout>
